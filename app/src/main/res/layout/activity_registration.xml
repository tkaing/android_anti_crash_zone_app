<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorDark"
    android:layout_height="match_parent">

    <TextView android:id="@+id/loginscrn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorWhite"
        android:text="Inscription"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <TextView android:id="@+id/fstTxt"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="Ton pseudo"
        />

    <EditText android:id="@+id/edit_text_pseudo"
        android:layout_width="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:ems="10"
        />

    <TextView android:id="@+id/secTxt"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ton adresse email"
        android:layout_marginLeft="100dp"
        />

    <EditText android:id="@+id/edit_text_email"
        android:layout_width="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:ems="10"
        />

    <TextView android:id="@+id/thirdTxt"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ton mot de passe"
        android:layout_marginLeft="100dp"
        />

    <EditText android:id="@+id/edit_text_password"
        android:layout_width="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:inputType="textPassword"
        android:ems="10"
        />

    <Button android:id="@+id/button_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorWhite"
        android:background="@color/colorAccent"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="S'inscrire"
        />

    <ProgressBar
        android:id="@+id/progress_bar_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        />

    <TextView android:id="@+id/text_view_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Déjà inscrit ? Connecte toi dès maintenant !"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorGold"
        android:onClick="test"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorDark"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_layout_header"
        android:background="@color/colorDark"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:contentDescription="Blabla"
        >

        <TextView android:id="@+id/text_view_title"
            android:text="Pseudo"
            android:textSize="25sp"
            android:textColor="@color/colorGold"
            android:drawableStart="@drawable/previous_arrow"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            />

        <TextView android:id="@+id/text_view_live"
            android:text="Live"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorRed"
            android:drawableStart="@drawable/circle"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="25dp"
            android:layout_alignParentBottom="true"
            />

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Blabla"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_view_drone"
        android:src="@drawable/drone_01"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_below="@+id/relative_layout_header"
        />

    <LinearLayout
        android:id="@+id/linear_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_drone">

        <Button
            android:id="@+id/button_session"
            android:text="Nouvelle Session"
            android:textColor="@color/colorWhite"
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/button_history"
            android:text="Historique"
            android:textColor="#FFF"
            android:background="#888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>

</RelativeLayout>